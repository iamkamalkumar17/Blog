<%- include('partials/header') -%>
<h1>Compose</h1>

<form action="/edit/<%= postNum %>" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" name="postTitle" class="form-control" value="<%= title %>" />

    <label>Post</label>
    <textarea
      name="postBody"
      class="form-control"
      cols="30"
      rows="10"
      value="content"
    ><%= content %></textarea>
  </div>
  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>
<%- include('partials/footer') -%>
